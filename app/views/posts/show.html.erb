<section class="post-info">
    <div class="post-user-info">
      <p>Post <%= '#' %><%= @post.id %><%= ' ' %><%= @post.title %> by <%= @post.author.name %></p>
      <p>Comments: <%= @post.comments_counter || 0 %> 
      <span> Likes: <%= @post.likes_counter || 0 %></span></p>
    </div>
    <p><%= @post.text %></p>
    <div class="comments">
         <% @post.recent_comments.each do |comment| %>
            <p><%= comment.author.name %> : <%= comment.text %> </p>
        <% end %>
    </div>
</section>
