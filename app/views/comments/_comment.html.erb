<h1>New Comment</h1>
  <%= form_with model: @comment, url: comments_comments_path, local: true do |form| %>
    <div class="c-text">
      <%= form.label :text %>
      <br>
      <%= form.text_area :text, class: 'text-form'%>
    </div>

    <div class="f-submit">
      <%= form.submit "Add" %> 
    </div>
<% end %>