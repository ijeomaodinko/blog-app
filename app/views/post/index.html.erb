<section class="user-info">
<div class="image-info">
<img class="user-image" src="<%= @user.photo %>" alt="user photo">
</div>
<div class="info">
 <h2> <%= @user.name %> </h1>
 <h3>Number of posts: <%= @user.posts_counter %></h3>
 </div>
</section>

<section  class="post-info">
<% @posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do %>
   <div class="post">
   <h2>Post: <%= '#' %> <%= post.id %></h2>
    <h3><%= post.title%></h3>
    <p> <%= post.text%> </p>
    </div>
    <div class=comment>
    <p>Comments: <%= post.comments_counter %>
    <span class="span-like">Likes: <%= post.likes_counter %></span></p>
    </div>
    <% end %>
    <% end %>
    </section>
    
    <section class="comment-info">
    <% @post.each do |comment|%>
       <div  class="comment">
        <p><%= comment.author_id %><%= ':' %><span>
         <%= comment.text %><span></p> 
        </div>
    <% end %>
    </section>
    <button type="submit"> Pagination </button>
