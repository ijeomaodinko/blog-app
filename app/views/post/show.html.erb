<div class="post-info">
    <div class="post-user-info">
      <p>Post : <%= @post.title %> by <%= @post.user.name %></p>
      <p>Comments: <%= @post.comments_counter %> 
      <span> Likes: <%= @post.likes_counter %></span></p>
    </div>
    <p><%= @post.text %></p>
    <div class="comments">
         <% @post.recent_comments.each do |comment| %>
            <p><%= comment.user.name%> : <%= comment.text %> </p>
        <% end %>
    </div>
  </div>
